{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildEnvironment": "V3"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "gunicorn dvi_server_final:app --worker-class uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT",
    "sleepApplication": false,
    "useLegacyStacker": false
  },
  "restartPolicyType": "ON_FAILURE",
  "restartPolicyMaxRetries": 10
}
